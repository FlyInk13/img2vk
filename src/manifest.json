{
"update_url": "https://clients2.google.com/service/update2/crx",

	"name": "Отправить фото ВКонтакте",
	"permissions": ["storage","contextMenus","*://*/*"],
	"description": "Отправляй и сохраняй картинки с любых сайтов сразу в ВКонтакте",
	"version": "2.0",
	"incognito": "split",
	"icons": {
		"48": "icon/48.png",
		"48": "icon/128.png"
	},
	"browser_action": {
		"default_icon": {
			"48": "icon/48.png",
			"48": "icon/128.png"
		}
	},
	"background":{
		"scripts":[
			"modules/xhr.js",
			"modules/api.js",
			"modules/upload.js",
			"background.js"
		]
	},
	"manifest_version": 2
}
